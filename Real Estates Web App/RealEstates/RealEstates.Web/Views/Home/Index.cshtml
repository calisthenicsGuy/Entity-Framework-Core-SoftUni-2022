@using RealEstates.Services.Models.Districts;
@model IEnumerable<DistrictViewDto>
{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Welcome to Real Estates BG!</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div>
    <table class="table table-striped table-hover">
        <tr>
            <th>District</th>
            <th>Avrg. Price</th>
            <th>Min Price</th>
            <th>Max Price</th>
            <th>Properties</th>
        </tr>
        @foreach (DistrictViewDto district in this.Model)
        {
            <tr>
                <th>@district.Name</th>
                <th>@district.AveragePrice</th>
                <th>@district.MinPrice</th>
                <th>@district.MaxPrice</th>
                <th>@district.PropertiesCount</th>
            </tr>
        }
    </table>
</div>